Config { font = "xft:Dina:pixelsize=12:antialias=false"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [Run Cpu ["-L","3","-H","50","--normal","#46772d","--high","#880b32"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run StdinReader
                    , Run Battery ["-t", "Batt: <left>"] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
         , template = "         %StdinReader% }{ %cpu% | %memory% * %swap% | %battery%  <fc=#46772d>%date%</fc>"
       }

